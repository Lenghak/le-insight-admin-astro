---
import { BackButton } from "@/modules/error/components/back-button";
import { H1 } from "@ui/h1";
import { P } from "@ui/p";

import RootLayout from "@/common/layouts/root-layout.astro";
---

<RootLayout title="Le-Insight | 500">
  <main class="flex h-screen flex-col items-center justify-center">
    <H1 className="text-7xl underline lg:text-9xl">500</H1>
    <P className="max-w-sm text-center">
      Internal Server Error! Looks like there is a problem with our server.
      Please try again later.
    </P>

    <div class="mt-8 flex flex-row items-center justify-center gap-4">
      <BackButton client:load />
    </div>
  </main>
</RootLayout>
